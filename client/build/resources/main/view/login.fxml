<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.chatapp.client.controller.LoginController"
            prefHeight="650" prefWidth="1000"
            styleClass="root-container">

    <left>
        <VBox alignment="CENTER" spacing="20" styleClass="form-container">
            <padding>
                <Insets top="70" right="50" bottom="70" left="50"/>
            </padding>

            <VBox alignment="CENTER" spacing="5">
                <Label text="LOGIN" styleClass="page-title"/>
                <Label text="Access your account securely" alignment="CENTER" styleClass="page-subtitle"/>
            </VBox>

            <VBox spacing="18" maxWidth="360">
                <VBox spacing="8">
                    <Label text="Username" styleClass="field-label"/>
                    <HBox styleClass="input-field">
                        <Label text="👤" styleClass="field-icon"/>
                        <TextField fx:id="usernameField" promptText="username" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </VBox>

                <VBox spacing="8">
                    <Label text="Password" styleClass="field-label"/>
                    <HBox styleClass="input-field">
                        <Label text="🔒" styleClass="field-icon"/>
                        <PasswordField fx:id="passwordField" promptText="••••••••" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </VBox>
            </VBox>

            <VBox spacing="15" alignment="CENTER">
                <Button fx:id="loginButton" text="LOGIN" onAction="#handleLogin"
                        styleClass="primary-button" maxWidth="360"/>
                <Hyperlink text="Forgot password?" onAction="#handleForgotPassword"/>
            </VBox>
        </VBox>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="35" styleClass="info-panel">
            <padding>
                <Insets top="60" right="50" bottom="60" left="50"/>
            </padding>

            <HBox spacing="0" alignment="CENTER" styleClass="tab-container">
                <Button text="LOGIN" styleClass="tab-button, tab-active"/>
                <Button text="REGISTER" onAction="#handleRegister" styleClass="tab-button"/>
            </HBox>

            <VBox alignment="CENTER" spacing="15" styleClass="illustration-area">
                <Label text="🔐" styleClass="illustration-icon"/>
                <Label text="Welcome Back!" styleClass="illustration-title"/>
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Secure, fast and reliable access" styleClass="illustration-text"/>
                    <Label text="to your account." styleClass="illustration-text"/>
                </VBox>
            </VBox>
        </VBox>
    </center>

</BorderPane>
