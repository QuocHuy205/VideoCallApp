<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.chatapp.client.controller.RegisterController"
            prefHeight="650" prefWidth="1000"
            minHeight="650" minWidth="1000"
            maxHeight="650" maxWidth="1000"
            styleClass="root-container">

    <!-- Left Side - Register Form -->
    <left>
        <VBox alignment="CENTER" spacing="18" styleClass="form-container"
              prefHeight="650" minHeight="650" maxHeight="650">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>

            <VBox alignment="CENTER" spacing="5">
                <Label text="REGISTER" styleClass="page-title"/>
                <Label text="Register to take advantage of our great features"
                       styleClass="page-subtitle" wrapText="true"/>
            </VBox>

            <VBox spacing="14" maxWidth="360" prefWidth="360" VBox.vgrow="NEVER">
                <VBox spacing="8">
                    <Label text="User Name" styleClass="field-label"/>
                    <HBox styleClass="input-field">
                        <Label text="👤" styleClass="field-icon"/>
                        <TextField fx:id="usernameField" promptText="kawi" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </VBox>

                <VBox spacing="8">
                    <Label text="Email" styleClass="field-label"/>
                    <HBox styleClass="input-field">
                        <Label text="✉️" styleClass="field-icon"/>
                        <TextField fx:id="emailField" promptText="kawi@gmail.com" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </VBox>

                <VBox spacing="8">
                    <Label text="Password" styleClass="field-label"/>
                    <HBox styleClass="input-field">
                        <Label text="🔒" styleClass="field-icon"/>
                        <PasswordField fx:id="passwordField" promptText="12345abc" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </VBox>

                <VBox spacing="8">
                    <Label text="Confirm Password" styleClass="field-label"/>
                    <HBox styleClass="input-field">
                        <Label text="🔒" styleClass="field-icon"/>
                        <PasswordField fx:id="confirmPasswordField" promptText="12345abc" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </VBox>
            </VBox>

            <VBox spacing="10" alignment="CENTER">
                <Button fx:id="registerButton" text="REGISTER" onAction="#handleRegister"
                        styleClass="primary-button" maxWidth="360" prefWidth="360"/>

                <Label text="By creating an account, you agree to Conditions of"
                       styleClass="terms-text" maxWidth="360"/>
                <Label text="Use and Privacy Notice."
                       styleClass="terms-text" maxWidth="360"/>
            </VBox>
        </VBox>
    </left>

    <!-- Right Side - Info Panel -->
    <center>
        <VBox alignment="CENTER" spacing="35" styleClass="info-panel"
              prefHeight="650" minHeight="650" maxHeight="650">
            <padding>
                <Insets top="60" right="50" bottom="60" left="50"/>
            </padding>

            <!-- Tab Buttons -->
            <HBox spacing="0" alignment="CENTER" styleClass="tab-container">
                <Button text="LOGON" onAction="#handleLogin" styleClass="tab-button"/>
                <Button text="REGISTER" styleClass="tab-button, tab-active"/>
            </HBox>

            <!-- Illustration Area -->
            <VBox alignment="CENTER" spacing="15" styleClass="illustration-area" VBox.vgrow="ALWAYS">
                <Label text="📝" styleClass="illustration-icon"/>
                <Label text="Create Account" styleClass="illustration-title"/>
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Join our community and" styleClass="illustration-text"/>
                    <Label text="start chatting today" styleClass="illustration-text"/>
                </VBox>
            </VBox>

            <Label text="KAWIDESIGN.COM" styleClass="watermark"/>
        </VBox>
    </center>

</BorderPane>