<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.chatapp.client.controller.component.ChatViewController"
      styleClass="chat-view-panel" HBox.hgrow="ALWAYS">

    <!-- Chat Header -->
    <HBox alignment="CENTER_LEFT" spacing="15" styleClass="chat-header">
        <padding>
            <Insets top="12" right="15" bottom="12" left="15"/>
        </padding>

        <StackPane styleClass="contact-avatar-container">
            <Label fx:id="contactAvatarLabel" text="D" styleClass="contact-avatar"/>
        </StackPane>

        <VBox spacing="2" HBox.hgrow="ALWAYS">
            <Label fx:id="contactNameLabel" text="Designers" styleClass="contact-name"/>
            <Label fx:id="contactStatusLabel" text="3 members" styleClass="contact-status"/>
        </VBox>

        <Button styleClass="icon-button" onAction="#startVideoCall">
            <graphic>
                <Label text="📹" styleClass="icon-label-large"/>
            </graphic>
        </Button>

        <Button styleClass="icon-button" onAction="#searchInChat">
            <graphic>
                <Label text="🔍" styleClass="icon-label-large"/>
            </graphic>
        </Button>

        <Button styleClass="icon-button" onAction="#openChatMenu">
            <graphic>
                <Label text="⋮" styleClass="icon-label-large"/>
            </graphic>
        </Button>
    </HBox>

    <Separator/>

    <!-- Messages Area -->
    <ScrollPane fx:id="messagesScrollPane" fitToWidth="true"
                styleClass="messages-scroll" VBox.vgrow="ALWAYS">
        <VBox fx:id="messagesContainer" spacing="10" styleClass="messages-container">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
        </VBox>
    </ScrollPane>

    <Separator/>

    <!-- Message Input Area -->
    <VBox spacing="0" styleClass="message-input-area">
        <padding>
            <Insets top="12" right="15" bottom="12" left="15"/>
        </padding>

        <HBox alignment="CENTER" spacing="10">
            <Button styleClass="icon-button" onAction="#attachFile">
                <graphic>
                    <Label text="📎" styleClass="icon-label-large"/>
                </graphic>
            </Button>

            <TextField fx:id="messageInputField" promptText="Write a message..."
                       HBox.hgrow="ALWAYS" styleClass="message-input"
                       onAction="#sendMessage"/>

            <Button styleClass="icon-button" onAction="#addEmoji">
                <graphic>
                    <Label text="😊" styleClass="icon-label-large"/>
                </graphic>
            </Button>

            <Button styleClass="icon-button" onAction="#recordVoice">
                <graphic>
                    <Label text="🎤" styleClass="icon-label-large"/>
                </graphic>
            </Button>
        </HBox>
    </VBox>

</VBox>