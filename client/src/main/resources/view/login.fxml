<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.chatapp.client.controller.LoginController"
            prefHeight="650" prefWidth="1000"
            minHeight="650" minWidth="1000"
            maxHeight="650" maxWidth="1000"
            styleClass="root-container">

    <!-- Left Side - Login Form -->
    <left>
        <VBox alignment="CENTER" spacing="20" styleClass="form-container"
              prefHeight="650" minHeight="650" maxHeight="650">
            <padding>
                <Insets top="80" right="50" bottom="80" left="50"/>
            </padding>

            <VBox alignment="CENTER" spacing="5">
                <Label text="LOGIN" styleClass="page-title"/>
                <Label text="Login to your account" styleClass="page-subtitle"/>
            </VBox>

            <VBox spacing="18" maxWidth="360" prefWidth="360" VBox.vgrow="NEVER">
                <VBox spacing="8">
                    <Label text="User Name" styleClass="field-label"/>
                    <HBox styleClass="input-field">
                        <Label text="ðŸ‘¤" styleClass="field-icon"/>
                        <TextField fx:id="usernameField" promptText="kawi" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </VBox>

                <VBox spacing="8">
                    <Label text="Password" styleClass="field-label"/>
                    <HBox styleClass="input-field">
                        <Label text="ðŸ”’" styleClass="field-icon"/>
                        <PasswordField fx:id="passwordField" promptText="12345abc" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </VBox>
            </VBox>

            <VBox spacing="15" alignment="CENTER">
                <Button fx:id="loginButton" text="LOGIN" onAction="#handleLogin"
                        styleClass="primary-button" maxWidth="360" prefWidth="360"/>

                <Hyperlink text="Need help?" onAction="#handleForgotPassword"/>
            </VBox>
        </VBox>
    </left>

    <!-- Right Side - Info Panel -->
    <center>
        <VBox alignment="CENTER" spacing="35" styleClass="info-panel"
              prefHeight="650" minHeight="650" maxHeight="650">
            <padding>
                <Insets top="60" right="50" bottom="60" left="50"/>
            </padding>

            <!-- Tab Buttons -->
            <HBox spacing="0" alignment="CENTER" styleClass="tab-container">
                <Button text="LOGIN" styleClass="tab-button, tab-active"/>
                <Button text="REGISTER" onAction="#handleRegister" styleClass="tab-button"/>
            </HBox>

            <!-- Illustration Area -->
            <VBox alignment="CENTER" spacing="15" styleClass="illustration-area" VBox.vgrow="ALWAYS">
                <Label text="ðŸ”" styleClass="illustration-icon"/>
                <Label text="Secure Login" styleClass="illustration-title"/>
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Your data is protected with" styleClass="illustration-text"/>
                    <Label text="end-to-end encryption" styleClass="illustration-text"/>
                </VBox>
            </VBox>

            <Label text="KAWIDESIGN.COM" styleClass="watermark"/>
        </VBox>
    </center>

</BorderPane>