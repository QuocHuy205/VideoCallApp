<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.chatapp.client.controller.MainController"
            styleClass="main-container"
            prefHeight="800" prefWidth="1200">

    <!-- Top: Toggle Button -->
    <top>
        <HBox styleClass="top-bar">
            <Button fx:id="globalToggleBtn" styleClass="menu-toggle-btn" onAction="#toggleSidebar">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>
                <graphic>
                    <HBox alignment="CENTER" prefWidth="20" prefHeight="20">
                        <SVGPath fx:id="hamburgerIcon"
                                 content="M 3 6 H 21 M 3 12 H 21 M 3 18 H 21"
                                 styleClass="hamburger-icon"/>
                    </HBox>
                </graphic>
            </Button>
        </HBox>
    </top>

    <!-- Center: Main Content -->
    <center>
        <HBox spacing="0" HBox.hgrow="ALWAYS">

            <!-- Sidebar Menu -->
            <VBox fx:id="sidebarContainer">
                <fx:include fx:id="sidebarMenu" source="components/sidebar-menu.fxml"/>
            </VBox>

            <!-- Chat List Panel -->
            <fx:include fx:id="chatListPanel" source="components/chat-list.fxml"/>

            <!-- Chat View Panel -->
            <fx:include fx:id="chatViewPanel" source="components/chat-view.fxml"/>

        </HBox>
    </center>

</BorderPane>